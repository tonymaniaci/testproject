<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="121dp"
        android:text="Close Session"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="60dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="75dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Coach Name:"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/coach_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="coach name:"
            android:singleLine="true"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="77dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Client Name:"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/client_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="client name:"
            android:singleLine="true"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:layout_weight="0.00">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Client Email:"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/client_email"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="email"
            android:singleLine="true"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Start Time:"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="start time:"
            android:singleLine="true"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:id="@+id/linearLayout2" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="duration:"
            android:singleLine="true"
            android:textStyle="normal"
            android:textColor="@color/grey"
            android:textSize="30dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="121dp"
        android:text="Do You Want to Close Session?"
        android:gravity="center"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:textSize="40dp"
        android:layout_weight="0.13" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="82dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="40dp"
            android:onClick="SubmitPassword" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="40dp"
            android:onClick="CancelPassword" />
    </LinearLayout>


</LinearLayout>